package compute;

import java.awt.Point;
import java.util.ArrayList;


import algorithm.ritter.Ritter;
import javafx.application.Application;
import javafx.application.Platform;
import javafx.scene.Group;
import javafx.scene.Scene;
import javafx.scene.paint.Color;
import javafx.scene.shape.Circle;
import javafx.stage.Stage;

public class GraphicView extends Application {

	@Override
	public void start(Stage primaryStage) {
		
		
		
		
		
		Group root = new Group();
		
		ArrayList<Point> points = new ArrayList<Point>();
		
		
	points.add(new Point(44,77));
		points.add(new Point(56,66));
		points.add(new Point(400,300));
		points.add(new Point(90,65));
		points.add(new Point(3,345));
		points.add(new Point(700,9));
		
		Circle p =new Circle (400,300,3,Color.RED);

		
		Circle circle =new Ritter().calculCercleMinRitter(points);
		circle.setFill(Color.AQUA);
		root.getChildren().addAll(circle,p);
		
		
		Scene scene = new Scene(root);
		
		primaryStage.setTitle("Ritter");
		primaryStage.setScene(scene);
		primaryStage.setHeight(800);
		primaryStage.setWidth(900);
		primaryStage.show();
		primaryStage.setOnCloseRequest(e -> Platform.exit());
	}

	
	
	
	
	
	
	
	
	public static void main(String[] args) {
		launch(args);
	}
}
